{
  "title": "Schema for Jwt.sign",
  "type": "object",
  "properties": {
    "header": {
      "type": "object",
      "properties": {
        "alg": {
          "type": "string",
          "enum": [ "none", "HS256", "PS256", "RS256", "ES256" ]
        }
      },
      "required": [ "alg" ],
      "additionalProperties": true
    },

    "body": {
      "type": ["object", "string"],
      "additionalProperties": true
    },

    "secret": { "type": "string"},

    "signingKeyFileName": { "type": "string" },
    "signingKeyPEM": { "type": "string" },
    "signingKeyJwk": {
      "type": "object",
      "properties": {
        "kty":  {
          "type": "string",
          "enum": ["RSA"]
        },
        "kid": { "type": "string" },
        "use":  {
          "type": "string",
          "enum": ["sig"]
        },
        "alg":  {
          "type": "string",
          "enum": ["RSA"]
        },
        "e": { "type": "string" },
        "n": { "type": "string" },
        "d": { "type": "string" },
        "p": { "type": "string" },
        "q": { "type": "string" },
        "dp": { "type": "string" },
        "dq": { "type": "string" },
        "qi": { "type": "string" }
      },
      "additionalProperties": false,
      "required": [
        "kty", "kid", "use",
        "e","n","d","p","q", "dp","dq","qi"
      ]
    }
  },
  "required": ["header", "body"],
  "additionalProperties": false
}
